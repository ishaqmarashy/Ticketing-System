@model Ticketing_System.Models.TicketInput
@{
    ViewData["Title"] = "Search Ticket Page";
}
<h4>Search for a Ticket.</h4>

<hr /><p>@ViewData["data"]</p>
<div class="row">
    <div class="col-md-4">
        <p>This page allows you to access the entirety of the tickets db, and view the tickets details.</p>
        <form id="Form" asp-action="ProcessTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter Ticket ID</label>
                <input asp-for="Complaint" id="SearchTicket" placeholder="Enter Ticket ID" class="form-control"/>
                <span asp-validation-for="Complaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<script src="~/js/SearchTicket.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
