@model Ticketing_System.Models.ErrorViewModel
<h1>Search for a Ticket.</h1>
<hr /><p>@ViewData["data"]</p>
<div class="row">
    <div class="col-md-4">
        <form id="Form" asp-action="ProcessTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequestId" class="control-label"></label>
                <input asp-for="RequestId" id="SearchTicket" placeholder="Enter Ticket ID" class="form-control" />
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/js/SearchTicket.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
