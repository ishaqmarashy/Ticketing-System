@model Ticketing_System.Models.ErrorViewModel
@{
    ViewData["Title"] = "Create Ticket Page";
}
<h4>Create a New Ticket</h4>
<hr />
<p>@ViewData["data"]</p>
<div class="row">
    <div class="col-md-4">
        <p>This page allows you to access create new tickets to be reviewed.</p>
        <form asp-action="ProcessCreateTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter the Issue You are Encountering</label>
                <textarea asp-for="RequestId" class="form-control"></textarea>
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
