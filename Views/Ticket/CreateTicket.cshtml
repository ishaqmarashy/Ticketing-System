@model Ticketing_System.Models.ErrorViewModel

<h4>Create a New Ticket</h4>
<hr />
<p>@ViewData["data"]</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessCreateTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter the Issue You are Encountering</label>
                <textarea asp-for="RequestId" class="form-control" ></textarea>
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
