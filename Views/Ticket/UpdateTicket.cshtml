@model Ticketing_System.Models.ErrorViewModel
@{
    ViewData["Title"] = "Update Ticket Page";
}
<h4>Edit a Ticket</h4>
<hr />
<p>
    @ViewData["data"]
    @{TempData["id"] = ViewData["id"];}
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter the Updated Text</label>
                <textarea asp-for="RequestId" class="form-control"></textarea>
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a class="btn btn-primary ripple-surface" asp-action="MyTickets">Back to My Tickets</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}