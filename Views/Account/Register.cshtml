@model Ticketing_System.Models.LoginModel
@{
    ViewData["Title"] = "Registration Page";
}
<h4>Register</h4>
<p>
    @ViewData["data"]
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="Form" asp-action="ProcessRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" placeholder="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" placeholder="Password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" name="Confirm Password" class="control-label">Confirm Password </label>
                <input asp-for="Password" type="password" placeholder="Confirm Password" id="Confirm_Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary ripple-surface" style="min-width: 95px;" asp-action="Register">Clear Fields</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/password.js" asp-append-version="true"></script>
<script src="~/js/login.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
